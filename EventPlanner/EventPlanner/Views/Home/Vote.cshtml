@using System.Threading.Tasks
@using EventPlanner.DTO.Event
@model IEnumerable<EventListItem>

@{
    ViewBag.Title = "Choose event to vote";
}

<h2>@ViewBag.Title</h2>
<div class="list-group">
    @foreach (var eventItem in Model)
    {
        <a asp-controller="Vote" asp-action="Index" asp-route-token="@eventItem.EventId.ToString()" class="list-group-item">@eventItem.Name</a>
    }
</div>
