@using System.Threading.Tasks
@using EventPlanner.Models
@model CreateEventViewModel

<h3>Create new event</h3>

<form asp-action="CreateNewEvent">

    @* Event title *@
    <div class="form-group">
        <label asp-for="EventName"></label>
        <input class="form-control" asp-for="EventName"/>
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    @* Event description *@
    <div class="form-group">
        <label asp-for="EventDescription"></label>
        <input class="form-control" asp-for="EventDescription"/>
    </div>

    @* Submit button *@
    <div class="form-group">
        <input type="submit" value="Next" class="btn btn-primary"/>
    </div>
</form>